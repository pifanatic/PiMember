<!doctype html>
<html lang="en-US">
<head>
    <title>PiMember</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Righteous&display=swap"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comic+Neue&display=swap"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <link rel="stylesheet" href="[% c.uri_for('/static/styles.css') %]"/>
</head>

<body>
    <div id="header">
        [% IF c.user_exists %]
            <div class="header-left">
                <div class="username">
                    <i class="fas fa-user"></i>
                    Hello,
                    [% FILTER html %]
                        [% c.user.first_name %]!
                    [% END %]
                </div>
                <a class="header-item" href="[% c.uri_for(c.controller('Cards').action_for('index')) %]">
                    <i class="far fa-clone fa-fw"></i>
                    Cards
                </a>
                <a class="header-item" href="[% c.uri_for(c.controller('Tags').action_for('index')) %]">
                    <i class="fas fa-tags fa-fw"></i>
                    Tags
                </a>
                <a class="header-item" href="[% c.uri_for(c.controller('Trash').action_for('index')) %]">
                    <i class="fas fa-trash-alt fa-fw"></i>
                    Trash
                </a>
                <a class="header-item" href="[% c.uri_for(c.controller('Cards').action_for('go_to_next_card')) %]">
                    <i class="fas fa-graduation-cap fa-fw"></i>
                    Learn ([% c.session.queue.size %])
                </a>
            </div>
        [% END %]
        <div class="header-center">
            <i class="fas fa-cogs"></i>
            <a class="app-title"
               href="[% c.uri_for(c.controller('Root').action_for('index')) %]">
               PiMember
            </a>
            <i class="fas fa-cogs"></i>
        </div>
        [% IF c.user_exists %]
            <div class="header-right">
                [% INCLUDE cards/search_form.tt %]

                <a href="[% c.uri_for(c.controller('Logout').action_for('index')) %]">
                    Logout<i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        [% END %]
    </div>

    <div class="content">
        [% content %]
    </div>

    [% IF error_msg %]
        <div class="notification error">
            <div class="notification-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            [% FILTER html %]
                [% error_msg %]
            [% END %]
        </div>
    [% ELSIF status_msg %]
        <div class="notification success">
            <div class="notification-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            [% FILTER html %]
                [% status_msg %]
            [% END %]
        </div>
    [% END %]
</body>

</html>
