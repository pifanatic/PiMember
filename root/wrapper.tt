<!doctype html>
<html>
<head>
    <title>PiMember</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Righteous&display=swap"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Comic+Neue&display=swap"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <link rel="stylesheet" href="[% c.uri_for('/static/styles.css') %]"/>
</head>

<body>
    <div id="header">
        [% IF c.user_exists %]
            <div class="menu-left">
                <i class="fas fa-user"></i>
                Hello, [% c.user.first_name %]!
            </div>
        [% END %]
        <div class="title">
            <i class="fas fa-cogs"></i>
            <span class="app-title">PiMember</span>
            <i class="fas fa-cogs"></i>
        </div>
        [% IF c.user_exists %]
            <div class="menu-right">
                <a href="[% c.uri_for('/logout') %]">
                    Logout<i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        [% END %]
    </div>

    [% IF c.user_exists %]
        <div class="main-menu overlay">
            <a class="menu-item" href="[% c.uri_for('/') %]">
                <i class="fas fa-home fa-fw"></i>
                Home
            </a>

            <a class="menu-item" href="[% c.uri_for('/cards') %]">
                <i class="fas fa-list fa-fw"></i>
                Card list
            </a>

            <a class="menu-item" href="[% c.uri_for('/cards/add') %]">
                <i class="fas fa-plus-square fa-fw"></i>
                Add a new card
            </a>

            <a class="menu-item menu-item-primary" href="[% c.uri_for('/learn') %]">
                <i class="fas fa-graduation-cap fa-fw"></i>
                Learn
            </a>

            <div class="version-hint">
                [% c.config.name %] v[% c.config.version %]
            </div>
        </div>
    [% END %]

    [% content %]

    [% IF error_msg %]
        <div class="notification error">
            <div class="notification-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            [% error_msg %]
        </div>
    [% ELSIF success_msg %]
        <div class="notification success">
            <div class="notification-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            [% success_msg %]
        </div>
    [% END %]
</body>

</html>
