<div class="sub-header">
    <div class="sub-header-title">
        [% FILTER html %]
            [% title %]
        [% END %]
    </div>
</div>

<form id="cardForm" class="overlay" method="post">
    <div class="title-row">
        <label for="title">Title</label>
        <input id="title" name="title" value="[% card.title %]"required/>
    </div>
    <div class="form-wrapper">
        <div class="front">
            <div class="front-input-wrapper">
                Frontside text
                <textarea id="front-input" name="frontside" required>[% card.frontside %]</textarea>
            </div>
            <div class="front-preview-wrapper">
                Frontside preview
                <div id="front-preview" class="front-preview card"></div>
            </div>
        </div>

        <div class="back">
            <div class="back-input-wrapper">
                Backside text
                <textarea id="back-input" name="backside" required>[% card.backside %]</textarea>
            </div>
            <div class="back-preview-wrapper">
                Backside preview
                <div id="back-preview" class="back-preview card"></div>
            </div>
        </div>
    </div>

    <div class="tags-row">
        <label for="tags">Tags</label>
        <input id="tags" name="tags" value="[% tags %]"/>
    </div>

    <button class="submit-button btn btn-primary">
        [% submit_button_text %]
    </button>
</form>

<script src="[% c.uri_for('/static/js/cardForm.js') %]" type="module"></script>
